#!/bin/bash

current_node_env="${NODE_ENV:-development}"

is_production() {
  [ "$current_node_env" == "production" ]
}

if is_production; then
  echo "Woah! Running this is production is a bad idea. Exiting"
  exit 1
fi

echo "Resetting development database"
dropdb vc-sandbox-dev
createdb vc-sandbox-dev
bin/migrate

# Stop rabbitmq service, ignore errors
sudo rabbitmqctl stop || true
